<div class="container p-4">
	<div class="row">
		<div class="col-md-4 mx-auto">
			<div class="card bg-dark text-light">
				<div class="card-header">
					<h3>Task: {{ task.name }}</h3>
				</div>
				<div class="card-body">
					<form action="/tasks/edit/{{ task.id }}" method="POST">
						<div class="mb-3">
							<input value="{{ task.name }}" class="bg-dark text-light rounded-0 form-control" type="text" name="name" placeholder="Title" required="" autofocus="">
						</div>
						<div class="mb-3">
							<textarea name="description" class="text-area bg-dark text-light rounded-0 form-control cols="30" rows="10">{{ task.description }}</textarea>
						</div>
						<div class="d-grid gap-2">
							<button class="btn btn-success rounded-0">Edit</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
