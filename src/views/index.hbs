<div class="container p-4">
	<div class="row">
		<div class="col-md-4 mx-auto">
			<div class="card bg-dark text-light mb-4">
				<div class="card-header">
					<h2>App Tasks</h2>
				</div>
				<div class="card-body">
					<form action="/tasks" method="POST">
						<div class="mb-3">
							<input type="text" name="name" class="form-control bg-dark text-light rounded-0" placeholder="Title" autofocus="" required="">
						</div>
						<div class="mb-3">
							<textarea name="description" cols="30" class="text-area form-control bg-dark text-light rounded-0" rows="10" placeholder="Description" required=""></textarea>
						</div>
						<div class="d-grid gap-2"><button class="btn btn-success rounded-0">Guardar</button></div>
					</form>
				</div>
			</div>
		</div>
		<div class="col-md-4 mx-auto container-cards">
			{{#each tasks}}
				<div class="card bg-dark mb-3 text-light">
					<div class="card-header">
						<h5>{{ name }}</h5>
					</div>
					<div class="card-body">
						<p>{{ description }}</p>
					</div>
					<div class="m-3">
							<a class="m-1 btn btn-danger rounded-0" href="/tasks/delete/{{ id }}">Delete</a>
							<a class="m-1 btn btn-primary rounded-0" href="/tasks/{{ id }}">Edit</a>
					</div>
				</div>
			{{else}}
				<div class="card text-center p-3 bg-dark text-light">
					<h3>No hay tareas guardadas</h3>
				</div>
			{{/each}}
		</div>
	</div>
</div>
